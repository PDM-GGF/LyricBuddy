<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome_navigation"
    app:startDestination="@id/LoginActivity" >

    <activity
        android:id="@+id/LoginActivity"
        android:name="com.progettopdm.lyricbuddy.login.Login"
        android:label="activity_login"
        tools:layout="@layout/activity_login" >
        <action
            android:id="@+id/action_loginActivity_to_mainActivity"
            app:destination="@id/mainActivity" />
    </activity>
    <activity
        android:id="@+id/registerActivity"
        android:name="com.progettopdm.lyricbuddy.login.Register"
        android:label="activity_registration"
        tools:layout="@layout/activity_register" >
        <action
            android:id="@+id/action_registerActivity_to_mainActivity"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_registerActivity_to_LoginActivity"
            app:destination="@id/LoginActivity" />
    </activity>
    <activity
        android:id="@+id/mainActivity"
        android:name="com.progettopdm.lyricbuddy.MainActivity"
        android:label="MainActivity" />
    <fragment
        android:id="@+id/userprofile"
        android:name="com.progettopdm.lyricbuddy.ui.userprofile.UserProfileFragment"
        android:label="activity_userprofile_active"
        tools:layout="@layout/fragment_userprofile_active">
        <action
            android:id="@+id/action_UserProfileFragment_to_LoginActivity"
            app:destination="@id/LoginActivity"
            />
    </fragment>
</navigation>